$body = "grant_type=client_credentials&client_id=%7B%7Bclient_id%7D%7D&client_secret=%7B%7Bclient_secret%7D%7D"

$response = Invoke-RestMethod 'https://ontology.scot.nhs.uk/authorisation/auth/realms/terminology/protocol/openid-connect/token' -Method 'POST' -Headers $headers -Body $body
$response | ConvertTo-Json