require "uri"
require "net/http"

url = URI("https://ontology.scot.nhs.uk/authorisation/auth/realms/terminology/protocol/openid-connect/token")

https = Net::HTTP.new(url.host, url.port)
https.use_ssl = true

request = Net::HTTP::Post.new(url)
request.body = "grant_type=client_credentials&client_id=%7B%7Bclient_id%7D%7D&client_secret=%7B%7Bclient_secret%7D%7D"

response = https.request(request)
puts response.read_body
