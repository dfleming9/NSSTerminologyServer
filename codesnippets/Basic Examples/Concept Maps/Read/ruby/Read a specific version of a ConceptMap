require "uri"
require "net/http"

url = URI("https://ontology.scot.nhs.uk/production1/fhir/ConceptMap/NICIP-SNOMED-MAP-20171001/_history/1?_format=application/fhir+xml")

https = Net::HTTP.new(url.host, url.port)
https.use_ssl = true

request = Net::HTTP::Get.new(url)
request["Authorization"] = "Bearer <token>"

response = https.request(request)
puts response.read_body
