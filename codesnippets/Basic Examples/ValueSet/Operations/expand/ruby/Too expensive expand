require "uri"
require "net/http"

url = URI("https://ontology.scot.nhs.uk/production1/fhir/ValueSet/$expand?url=http://snomed.info/sct/83821000000107?fhir_vs")

https = Net::HTTP.new(url.host, url.port)
https.use_ssl = true

request = Net::HTTP::Get.new(url)
request["Authorization"] = "Bearer <token>"

response = https.request(request)
puts response.read_body
