OkHttpClient client = new OkHttpClient().newBuilder()
  .build();
Request request = new Request.Builder()
  .url("https://ontology.scot.nhs.uk/production1/fhir/CodeSystem/$validate-code?url=http://hl7.org/fhir/feeding-device&code=handhold-cup&display=Double handhold on glass/cup")
  .method("GET", null)
  .addHeader("Authorization", "Bearer <token>")
  .build();
Response response = client.newCall(request).execute();