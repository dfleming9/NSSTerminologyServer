curl --location --request POST 'https://ontology.scot.nhs.uk/production1/fhir/ValueSet/$expand' \
--header 'Authorization: Bearer <token>' \
--data-raw '{
    "resourceType": "Parameters",
    "parameter": [
        {
            "name": "valueSet",
            "resource": {
                "resourceType": "ValueSet",
                "compose": {
                    "include": [
                        {
                            "system": "https://dmd.nhs.uk",
                            "filter": [
                                {
                                    "property": "NMPREV",
                                    "op": "regex",
                                    "value": ".*[pP]aracetamol.*"
                                }
                            ]
                        }
                    ]
                }
            }
        },
        {
            "name": "count",
            "valueInteger": 100
        }
    ]
}'