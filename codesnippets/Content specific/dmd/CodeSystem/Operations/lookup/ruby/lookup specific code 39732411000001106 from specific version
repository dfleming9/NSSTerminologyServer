require "uri"
require "net/http"

url = URI("https://ontology.scot.nhs.uk/production1/fhir/CodeSystem/$lookup?system=https://dmd.nhs.uk&version=202111.1.0&code=39732411000001106")

https = Net::HTTP.new(url.host, url.port)
https.use_ssl = true

request = Net::HTTP::Get.new(url)
request["Authorization"] = "Bearer <token>"

response = https.request(request)
puts response.read_body
