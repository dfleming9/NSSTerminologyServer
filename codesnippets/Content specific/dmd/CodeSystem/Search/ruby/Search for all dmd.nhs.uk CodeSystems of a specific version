require "uri"
require "net/http"

url = URI("https://ontology.scot.nhs.uk/production1/fhir/CodeSystem?url:below=https://dmd.nhs.uk&version=202112.0.0&_count=10&_elements=name,url,version,valueSet")

https = Net::HTTP.new(url.host, url.port)
https.use_ssl = true

request = Net::HTTP::Get.new(url)
request["Authorization"] = "Bearer <token>"

response = https.request(request)
puts response.read_body
