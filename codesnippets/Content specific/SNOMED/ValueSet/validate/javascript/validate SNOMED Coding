var myHeaders = new Headers();
myHeaders.append("Content-Type", "application/fhir+json");
myHeaders.append("Authorization", "Bearer <token>");

var raw = JSON.stringify({
  "resourceType": "Parameters",
  "parameter": [
    {
      "name": "url",
      "valueUri": "http://snomed.info/sct?fhir_vs=refset/32570361000036108"
    },
    {
      "name": "coding",
      "valueCoding": {
        "code": "241649002",
        "system": "http://snomed.info/sct"
      }
    }
  ]
});

var requestOptions = {
  method: 'POST',
  headers: myHeaders,
  body: raw,
  redirect: 'follow'
};

fetch("https://ontology.scot.nhs.uk/production1/fhir/ValueSet/$validate-code", requestOptions)
  .then(response => response.text())
  .then(result => console.log(result))
  .catch(error => console.log('error', error));